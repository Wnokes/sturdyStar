<div class="row justify-content-md-center">
  <div class="about-us">

    <%= form_for @blog do |f| %>
    <% notice %>
    <div class="row justify-content-md-center">
      <div class="col-md-4">
        <%= f.text_field :name, placeholder: "Name", class: 'form-control' %><br />
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-md-4">
        <%= f.text_field :email, placeholder: "Email", class: 'form-control' %><br />
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-md-4">
        <%= f.text_field :address, placeholder: "Address(optional)", class: 'form-control' %><br />
      </div>
    </div>
    <div class="row justify-content-md-center">
      <div class="col-md-4">
        <%= f.text_field :phone, placeholder: "Phone(Optional)", class: 'form-control' %><br />
      </div>
    </div>
    <%= f.submit "Submit", class: 'btn btn-outline-dark' %>
  </div>
  
  <% end %>
</div>
</div>